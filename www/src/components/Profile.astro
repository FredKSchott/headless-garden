---
import Avatar from "./Avatar.astro";
import Link from "../icons/link.astro";
import User from "../icons/user.astro";
import Location from "../icons/location.astro";

const {user} = Astro.props;
---

<article>
  <div class="hero"></div>
  <Avatar url={user.avatar_url} size="large" border />
  <main>
    <div>
      <h1>{user.name || 'No Name Given'}</h1>
      <h2>@{user.handle}</h2>
    </div>
    <div>
      <p>{user.bio}</p>
    </div>
  </main>
  <footer>
    <ul>
      <li><User />{user.pronouns}</li>
      <li><Location />{user.location}</li>
      <li>
        <Link /><a
          href={`https://${user.website?.replace(/https?\:\/\//, "")}`}
          >{user.website?.replace(/https?\:\/\//, "")}</a
        >
      </li>
    </ul>
  </footer>
</article>

<style>
  article {
    max-width: 600px;
    margin: 0 auto;
    border: 1px solid var(--color-border);
    border-bottom: 0;
    background-color: #111;
  }
  .hero {
    height: 6rem;
    background-image: linear-gradient(120deg, #a18cd1 0%, #fbc2eb 100%);
    margin: -1rem;
    margin-bottom: -3rem;
  }
  article {
    padding: 1rem;
    padding-bottom: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  main {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-bottom: 0.5rem;
  }
  h1 {
    font-size: 1.25rem;
    font-weight: 800;
  }
  h2 {
    font-size: 0.9rem;
    font-weight: 400;
    color: var(--color-muted);
  }
  li > span {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 1.25rem;
    width: 1.25rem;
  }
  li > :global(p) {
    display: inline;
  }
  footer {
    margin-left: -1rem;
    margin-right: -1rem;
    padding: 1rem;
    border-top: 1px solid var(--color-border);
    color: var(--color-muted);
    background: linear-gradient(
      to bottom,
      rgb(18 18 18),
      rgb(18 18 18) 80%,
      rgb(18 18 18 / 0%)
    );
    z-index: 2;
  }
  footer > ul {
    display: grid;
    place-items: center;
    grid-template-columns: repeat(3, 1fr);
  }
  footer li {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 0.5rem;
  }
  footer :global(svg) {
    --size: 1.25rem;
    width: var(--size);
    height: var(--size);
  }
</style>
